<h3 class="ui header">{{t "forms.i-i-s-otel2-комнаты-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otel2-комнаты-e.отели-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.отели
      displayAttributeName="наименование"
      autocomplete=true
      relationName="отели"
      projection="ОтелиL"
      title=(t "forms.i-i-s-otel2-комнаты-e.отели-caption")
      readonly=readonly
      componentName="отелиLookup"
      class=(if (v-get validationModel "отели" "isInvalid") "error")
      data-test-i-i-s-otel2-комнаты-e-отели=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "отели" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-otel2-комнаты-e.iD-caption")
      data-test-i-i-s-otel2-комнаты-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.комнатаОтеля
      class=(if (v-get validationModel "комнатаОтеля" "isInvalid") "error")
      label=(t "forms.i-i-s-otel2-комнаты-e.комнатаОтеля-caption")
      data-test-i-i-s-otel2-комнаты-e-комнатаОтеля=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "комнатаОтеля" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.этаж
      class=(if (v-get validationModel "этаж" "isInvalid") "error")
      label=(t "forms.i-i-s-otel2-комнаты-e.этаж-caption")
      data-test-i-i-s-otel2-комнаты-e-этаж=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "этаж" "message")}}
  </div>
</form>
