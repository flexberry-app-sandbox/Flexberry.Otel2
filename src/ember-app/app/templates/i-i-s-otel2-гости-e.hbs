<h3 class="ui header">{{t "forms.i-i-s-otel2-гости-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otel2-гости-e.авторизация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.авторизация
      displayAttributeName="имя"
      autocomplete=true
      relationName="авторизация"
      projection="АвторизацияL"
      title=(t "forms.i-i-s-otel2-гости-e.авторизация-caption")
      readonly=readonly
      componentName="авторизацияLookup"
      class=(if (v-get validationModel "авторизация" "isInvalid") "error")
      data-test-i-i-s-otel2-гости-e-авторизация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "авторизация" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.комната
      class=(if (v-get validationModel "комната" "isInvalid") "error")
      label=(t "forms.i-i-s-otel2-гости-e.комната-caption")
      data-test-i-i-s-otel2-гости-e-комната=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "комната" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otel2-гости-e.датаЗаселения-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаЗаселения
      class=(if (v-get validationModel "датаЗаселения" "isInvalid") "error")
      data-test-i-i-s-otel2-гости-e-датаЗаселения=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаЗаселения" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otel2-гости-e.датаВыезда-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаВыезда
      class=(if (v-get validationModel "датаВыезда" "isInvalid") "error")
      data-test-i-i-s-otel2-гости-e-датаВыезда=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаВыезда" "message")}}
  </div>
</form>
